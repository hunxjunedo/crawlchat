{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "../scrape/*": ["../server/src/scrape/*"],
      "../github-api": ["../server/src/github-api"],
      "../rate-limiter": ["../server/src/rate-limiter"],
      "../indexer/*": ["../server/src/indexer/*"]
    }
  }
}
